% layout 'default';
% title 'New folder';

<h1>NEW FOLDER</h1>

<form action="<%= url_for('/new_folder') %>" method="post">
  <div class="form-group">
    <%= csrf_field %>
    <%= label_for Name => 'Name' %>
    <%= text_field 'Name',class => 'form-control' %>
  </div>
  <div class="form-group">
    <button type="submit" class="btn btn-primary">Submit</button>
  </div>
</form>
