<!DOCTYPE html>
<html>
  <head>
  <%= stylesheet url_for('css/bootstrap.min.css') %>
  <%= stylesheet url_for('css/bootstrap-theme.min.css') %>
  <%= stylesheet url_for('css/sticky-footer.css') %>
  <title><%= $config->{'site'}{'name'} %> - <%= title %></title>
  </head>
  <body>
    <div class="navbar navbar-inverse">
      <div class="container">
        <strong><a class="navbar-brand" href="<%= url_for('/top') %>"><%= $config->{'site'}{'name'} %> - <%= $config->{'site'}{'description'} %></a></strong>
      </div>
    </div>
    <div class="container">
      <%= content %>
    </div>
    <footer class="footer">
      <div class="container">
        <%= $config->{'site'}{'name'} %> <%= $config->{'site'}{'version'} %> by <%= $config->{'site'}{'author'} %> <a href="<%= url_for('/top') %>">TOP</a><br>
        Working on <a href="http://mojolicio.us">Mojolicious</a>
      </div>
    </footer>
  </body>
</html>
